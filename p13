CODE
 #include<stdio.h>
 int main()
 {
     int i,ja,jb,n,s;
     printf("Enter");
     scanf("%d",&n);
     for(i=0;i<n;i++)
     {
         for(ja=0;ja<i+1;ja++)
           printf("*");
         for(s=0;s<2*(n-i-1);s++)
           printf(" ");
         for(jb=0;jb<i+1;jb++)
          printf("*");
      printf("\n");
     }
     for(i=0;i<n;i++)
      {    
         for(ja=0;ja<n-i;ja++)
          printf("*");
        for(s=0;s<2*i;s++)
          printf(" ");
        for(jb=0;jb<n-i;jb++)
          printf("*");
      printf("\n");
      }
     return 0;
 } 
 OUTPUT
 Enter5
